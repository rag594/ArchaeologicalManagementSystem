</nav>
<div class="container">
    <form action="/artifacts/addArtifact" method="post" id="formData" enctype="multipart/form-data">

        <div class="form-group mar-top">
            <input type="text" placeholder="Type of object" class="form-control" name="object_type"><br>
        </div>

        <div class="form-group">
            <input type="text" placeholder="Name of recorder" class="form-control" name="recorde_name"><br>
        </div>

        <div class="form-group">
            <input type="date" placeholder="Date"  class="form-control" name="date"><br>
        </div>

        <div class="form-group">
            <input type="text" placeholder="Description" class="form-control" name="description"><br>
        </div>

        <div class="form-group">
            <input type="text" placeholder="latitude" class="form-control" name="latitude"><br>
        </div>

        <div class="form-group">
            <input type="text" placeholder="longitude" class="form-control" name="longitude"><br>
        </div>

        <div class="form-group">
            <select id="lot_id"  name="lot_id" class="form-control">
                <option value="" disabled selected>Choose lot</option>
            </select><br>
        </div>

        <div class="form-group">
            <input type="file" placeholder="Upload photo" class="form-control" name="photo" id="photoFile"><br>
        </div>

        <div class="form-group">
            <button type="submit" id="submitButton"
                    name="submitButton" value="Submit" class="btn btn-default">Add
            </button>
        </div>
    </form>
</div>
