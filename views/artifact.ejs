<script type="text/javascript">

    $.get('/lots/getLot/', function (data) {
        for (var j = 0; j < data.listOfLots.length; j++) {
            $('#lot_id').append('<option value="' + data.listOfLots[j].lot_id + '">' + data.listOfLots[j].lot_name + '</option>');
        }
    });

</script>

