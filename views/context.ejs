<script type="text/javascript">

    $('formData').submit(function (event) {
        event.preventDefault();

        var formData = {
            'context': $('input[name=context]').val()
        };

        $.ajax({
            type: 'POST',
            url: '/context/add',
            data: formData,
            dataType: 'json',
            encode: true
        })
                .done(function (data) {
                    window.location = "/context/add"
                    console.log(data);

                });


        event.preventDefault();
    });

</script>

